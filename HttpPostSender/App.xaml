<Application x:Class="HttpPostSender.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:View="clr-namespace:HttpPostSender.View"
             StartupUri="View/MainView.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
        
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Commons;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/Commons;component/HeaderedContentControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type View:FavoriteViewModel}">
                <View:FavoriteView />
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>
</Application>
