<Window x:Class="ToolBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File"></MenuItem>
            <MenuItem Header="Edit"></MenuItem>
            <MenuItem Header="View"></MenuItem>
            <MenuItem Header="Tools"></MenuItem>
            <MenuItem Header="Help"></MenuItem>
        </Menu>

        <ToolBar DockPanel.Dock="Top">
            <Button Content="Save" />
            <Button Content="Zu Favoriten hinzufügen" />
            <Button Content="Courtage Änderungen" ToolBar.OverflowMode="Always" />
            <Button Content="Weiterempfehlungen" ToolBar.OverflowMode="Always" />
            <Button Content="Genschenke" ToolBar.OverflowMode="Always" />
            <Button Content="Log anzeigen" />
        </ToolBar>

        <Grid></Grid>
    </DockPanel>
</Window>
