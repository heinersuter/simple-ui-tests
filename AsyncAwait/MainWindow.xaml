<Window x:Class="AsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:progress="http://alsolos.ch/Commons"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <StackPanel Width="256" HorizontalAlignment="Center" VerticalAlignment="Center">

        <Button Content="Load Data" Click="Clicked" Height="24" Margin="8"/>

        <TextBox x:Name="TextBox" Height="24" VerticalContentAlignment="Center" Margin="8"/>

        <progress:BusyContentControl Margin="8"/>
    </StackPanel>

</Window>
