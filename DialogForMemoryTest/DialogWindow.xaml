<Window x:Class="DialogForMemoryTest.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DialogWindow" Height="200" Width="320">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Text="{Binding DisplayText}" Margin="8" />

        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="OK" MinWidth="80" Margin="8" Click="Button_Click" />

    </Grid>

</Window>
